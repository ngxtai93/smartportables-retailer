<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <welcome-file-list>
        Startup
    </welcome-file-list>
    
    <servlet>
        <servlet-name>Startup</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Startup</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
>
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>tai.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletRegister</servlet-name>
        <servlet-class>tai.ServletRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletLogout</servlet-name>
        <servlet-class>tai.ServletLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletManageAccount</servlet-name>
        <servlet-class>tai.ServletManageAccount</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletManageAccount</servlet-name>
        <url-pattern>/account/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAddProduct</servlet-name>
        <servlet-class>tai.ServletAddProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAddProduct</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FilterGetListCategory</filter-name>
        <filter-class>tai.FilterGetListCategory</filter-class>
    </filter>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.jpg</url-pattern>
        <url-pattern>*.js</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>FilterGetListCategory</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
